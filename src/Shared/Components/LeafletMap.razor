@using SmartLocate.Desktop.Admin.Controls.Leaflet
@using SmartLocate.Desktop.Admin.Controls.Leaflet.JsInterop
@inject IJSRuntime JsRuntime

<div id="@Map.Id" class="rounded" style="width: 100%; height: 100%;"></div>

@code {
    [Parameter] public Map Map { get; set; }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LeafletInterops.Create(JsRuntime, Map);
            Map.RaiseOnInitialized();
        }
    }

}
